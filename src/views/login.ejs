<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="/css/style.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    </head>
    <body>
        <%- include("partials/header.ejs") %>
        <div class="container">
            <form action="/users/login" method="post">
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                <% if(locals.errors && locals.errors.email){ %>
                  <p class="msg-error"> <%= locals.errors.email.msg %> </p>
                <% } %> 
              </div>
              
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                <% if(locals.errors && locals.errors.password){ %>
                  <p class="msg-error"> <%= locals.errors.password.msg %> </p>
                <% } %> 
              </div>
      
              <div class="mb-3 form-check">
                <input type="checkbox" name="remember" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Recordar usuario</label>
              </div>

              <% if(locals.errorLogin){ %>
                <p class="msg-error"> <%= errorLogin %></p>
              <% } %> 
      
              <button type="submit" class="btn btn-primary">
                Submit
              </button>
            </form>
          </div>
    </body>
</html>